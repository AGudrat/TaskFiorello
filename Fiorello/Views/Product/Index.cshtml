@{
    ViewData["Title"] = "Product";
}
<main>
    <div class="container">
        <div class="row products">
            @await Component.InvokeAsync("Product")
        </div>
        <input type="hidden" id="productsCount" value="@ViewBag.productsCount" />
        <div class="row my-5 justify-content-center">
            <button class="btn btn-primary" id="btn-load">
                Load more...
            </button>
        </div>
    </div>
</main>