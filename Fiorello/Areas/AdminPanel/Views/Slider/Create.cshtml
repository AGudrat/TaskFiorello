
@model MultipleSliderViewModel 
@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="card-content">
        <form method="post" enctype="multipart/form-data">
            <div class="field">
                <label asp-for="Photos">Create Slider</label>
                <div class="field-body">
                    <div class="field">
                        <label asp-for="Photos">Slect Images:</label>
                        <div class="control icons-left">
                            <input type="file" ID="photoUpload" asp-for="Photos" multiple="multiple" class="input" accept="image/*">
                            <label ID="myLabel" style="color:red" />
                            <span class="text-danger" asp-validation-for="Photos"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="field grouped">
                <div class="control">
                    <button id="btnUpload" type="submit" class="button green d-none">
                        Save
                    </button>
                    <a class="btn btn-light" asp-action="Index">Cancel</a>
                </div>

            </div>
        </form>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationPartial" />
}
