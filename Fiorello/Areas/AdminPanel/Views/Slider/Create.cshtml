
@model Slider 
@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="card-content">
        <form method="post" enctype="multipart/form-data">
            <div class="field">
                <label asp-for="Photo">Add Image</label>
                <div class="field-body">
                    <div class="field">
                        <label asp-for="Photo">Slider</label>
                        <div class="control icons-left">
                            <input asp-for="Photo" class="input" accept="image/*">
                            <span class="text-danger" asp-validation-for="Photo"></span>

                        </div>
                    </div>
                </div>
            </div>

            <div class="field grouped">
                <div class="control">
                    <button type="submit" class="button green">
                        Save
                    </button>
                    <a class="btn btn-light" asp-action="Index">Cancel</a>
                </div>

            </div>
        </form>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationPartial" />
}
